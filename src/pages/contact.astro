---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Hero from '../components/Hero.astro';
import Footer from '../components/Footer.astro';
---

<Layout title="Contact Us | Amplified Generative AI Innovation Center">
	<Header />
	
	<main class="pt-16 lg:pt-20">
		<!-- Hero Section -->
		<Hero 
			title="Get in Touch"
			subtitle="Contact & Collaboration"
			description="Ready to explore the possibilities of augmented intelligence? Whether you're interested in collaboration, partnership, or joining our research, we'd love to hear from you."
		/>

		<!-- Contact Methods -->
		<section class="py-20 bg-white">
			<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
				<div class="grid grid-cols-1 lg:grid-cols-2 gap-16">
					<!-- Contact Form -->
					<div>
						<h2 class="text-2xl font-bold text-gray-900 mb-6">Send Us a Message</h2>
						<form class="space-y-6" id="contact-form">
							<div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
								<div>
									<label for="firstName" class="block text-sm font-medium text-gray-700 mb-2">
										First Name *
									</label>
									<input
										type="text"
										id="firstName"
										name="firstName"
										required
										class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-amber-500 focus:border-amber-500 transition-colors"
										placeholder="John"
									/>
								</div>
								<div>
									<label for="lastName" class="block text-sm font-medium text-gray-700 mb-2">
										Last Name *
									</label>
									<input
										type="text"
										id="lastName"
										name="lastName"
										required
										class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-amber-500 focus:border-amber-500 transition-colors"
										placeholder="Doe"
									/>
								</div>
							</div>

							<div>
								<label for="email" class="block text-sm font-medium text-gray-700 mb-2">
									Email Address *
								</label>
								<input
									type="email"
									id="email"
									name="email"
									required
									class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-amber-500 focus:border-amber-500 transition-colors"
									placeholder="john.doe@example.com"
								/>
							</div>

							<div>
								<label for="organization" class="block text-sm font-medium text-gray-700 mb-2">
									Organization/Institution
								</label>
								<input
									type="text"
									id="organization"
									name="organization"
									class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-amber-500 focus:border-amber-500 transition-colors"
									placeholder="Your company or university"
								/>
							</div>

							<div>
								<label for="inquiry-type" class="block text-sm font-medium text-gray-700 mb-2">
									Inquiry Type *
								</label>
								<select
									id="inquiry-type"
									name="inquiryType"
									required
									class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-amber-500 focus:border-amber-500 transition-colors"
								>
									<option value="">Please select...</option>
									<option value="research-collaboration">Research Collaboration</option>
									<option value="industry-partnership">Industry Partnership</option>
									<option value="student-opportunities">Student Opportunities</option>
									<option value="speaking-engagement">Speaking Engagement</option>
									<option value="media-inquiry">Media Inquiry</option>
									<option value="general-question">General Question</option>
									<option value="other">Other</option>
								</select>
							</div>

							<div>
								<label for="subject" class="block text-sm font-medium text-gray-700 mb-2">
									Subject *
								</label>
								<input
									type="text"
									id="subject"
									name="subject"
									required
									class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-amber-500 focus:border-amber-500 transition-colors"
									placeholder="Brief subject line"
								/>
							</div>

							<div>
								<label for="message" class="block text-sm font-medium text-gray-700 mb-2">
									Message *
								</label>
								<textarea
									id="message"
									name="message"
									rows="6"
									required
									class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-amber-500 focus:border-amber-500 transition-colors resize-vertical"
									placeholder="Tell us about your interest in augmented intelligence and how we might collaborate..."
								></textarea>
							</div>

							<div class="flex items-start">
								<div class="flex items-center h-5">
									<input
										id="newsletter"
										name="newsletter"
										type="checkbox"
										class="w-4 h-4 text-amber-600 border-gray-300 rounded focus:ring-amber-500"
									/>
								</div>
								<div class="ml-3 text-sm">
									<label for="newsletter" class="text-gray-700">
										Subscribe to our newsletter for updates on research, events, and opportunities
									</label>
								</div>
							</div>

							<button
								type="submit"
								class="w-full bg-gradient-to-r from-amber-500 to-orange-500 text-white font-semibold py-4 px-6 rounded-lg hover:from-amber-600 hover:to-orange-600 transform hover:scale-105 transition-all duration-200 shadow-lg hover:shadow-xl"
							>
								Send Message
							</button>
						</form>
					</div>

					<!-- Contact Information -->
					<div>
						<h2 class="text-2xl font-bold text-gray-900 mb-6">Contact Information</h2>
						
						<div class="space-y-8">
							<!-- Location -->
							<div class="flex items-start space-x-4">
								<div class="w-12 h-12 bg-gradient-to-br from-amber-400 to-orange-500 rounded-lg flex items-center justify-center flex-shrink-0">
									<svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
										<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"/>
										<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"/>
									</svg>
								</div>
								<div>
									<h3 class="text-lg font-semibold text-gray-900 mb-2">Visit Us</h3>
									<p class="text-gray-600 leading-relaxed">
										Amplified Generative AI Innovation Center<br/>
										Vanderbilt University<br/>
										2301 Vanderbilt Place<br/>
										Nashville, TN 37235
									</p>
								</div>
							</div>

							<!-- Email -->
							<div class="flex items-start space-x-4">
								<div class="w-12 h-12 bg-gradient-to-br from-blue-400 to-cyan-500 rounded-lg flex items-center justify-center flex-shrink-0">
									<svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
										<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 4.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
									</svg>
								</div>
								<div>
									<h3 class="text-lg font-semibold text-gray-900 mb-2">Email Us</h3>
									<p class="text-gray-600 leading-relaxed">
										<a href="mailto:amplify@vanderbilt.edu" class="text-amber-600 hover:text-amber-700 transition-colors">
											amplify@vanderbilt.edu
										</a><br/>
										General inquiries and collaboration
									</p>
									<p class="text-gray-600 leading-relaxed mt-2">
										<a href="mailto:jules.white@vanderbilt.edu" class="text-amber-600 hover:text-amber-700 transition-colors">
											jules.white@vanderbilt.edu
										</a><br/>
										Direct contact with Director
									</p>
								</div>
							</div>

							<!-- Phone -->
							<div class="flex items-start space-x-4">
								<div class="w-12 h-12 bg-gradient-to-br from-green-400 to-emerald-500 rounded-lg flex items-center justify-center flex-shrink-0">
									<svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
										<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"/>
									</svg>
								</div>
								<div>
									<h3 class="text-lg font-semibold text-gray-900 mb-2">Call Us</h3>
									<p class="text-gray-600 leading-relaxed">
										<a href="tel:+16153222671" class="text-amber-600 hover:text-amber-700 transition-colors">
											(615) 322-2671
										</a><br/>
										Monday - Friday, 9:00 AM - 5:00 PM CT
									</p>
								</div>
							</div>

							<!-- Social Media -->
							<div class="flex items-start space-x-4">
								<div class="w-12 h-12 bg-gradient-to-br from-purple-400 to-pink-500 rounded-lg flex items-center justify-center flex-shrink-0">
									<svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
										<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 4V2a1 1 0 011-1h8a1 1 0 011 1v2m-9 0h10M7 4v11a2 2 0 002 2h6a2 2 0 002-2V4M7 4H5a2 2 0 00-2 2v11a2 2 0 002 2h2m8-15h2a2 2 0 012 2v11a2 2 0 01-2 2h-2"/>
									</svg>
								</div>
								<div>
									<h3 class="text-lg font-semibold text-gray-900 mb-2">Follow Us</h3>
									<div class="flex space-x-3">
										<a href="#" class="text-gray-500 hover:text-blue-600 transition-colors">
											<svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
												<path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
											</svg>
										</a>
										<a href="#" class="text-gray-500 hover:text-blue-400 transition-colors">
											<svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
												<path d="M24 4.557c-.883.392-1.832.656-2.828.775 1.017-.609 1.798-1.574 2.165-2.724-.951.564-2.005.974-3.127 1.195-.897-.957-2.178-1.555-3.594-1.555-3.179 0-5.515 2.966-4.797 6.045-4.091-.205-7.719-2.165-10.148-5.144-1.29 2.213-.669 5.108 1.523 6.574-.806-.026-1.566-.247-2.229-.616-.054 2.281 1.581 4.415 3.949 4.89-.693.188-1.452.232-2.224.084.626 1.956 2.444 3.379 4.6 3.419-2.07 1.623-4.678 2.348-7.29 2.04 2.179 1.397 4.768 2.212 7.548 2.212 9.142 0 14.307-7.721 13.995-14.646.962-.695 1.797-1.562 2.457-2.549z"/>
											</svg>
										</a>
										<a href="#" class="text-gray-500 hover:text-gray-900 transition-colors">
											<svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
												<path d="M12.017 0C5.396 0 .029 5.367.029 11.987c0 5.079 3.158 9.417 7.618 11.174-.105-.949-.199-2.403.041-3.439.219-.937 1.406-5.957 1.406-5.957s-.359-.72-.359-1.781c0-1.663.967-2.911 2.168-2.911 1.024 0 1.518.769 1.518 1.688 0 1.029-.653 2.567-.992 3.992-.285 1.193.6 2.165 1.775 2.165 2.128 0 3.768-2.245 3.768-5.487 0-2.861-2.063-4.869-5.008-4.869-3.41 0-5.409 2.562-5.409 5.199 0 1.033.394 2.143.889 2.741.098.119.112.224.083.345-.09.375-.293 1.199-.334 1.363-.053.225-.172.271-.402.165-1.495-.69-2.433-2.878-2.433-4.646 0-3.776 2.748-7.252 7.92-7.252 4.158 0 7.392 2.967 7.392 6.923 0 4.135-2.607 7.462-6.233 7.462-1.214 0-2.357-.629-2.749-1.378 0 0-.599 2.282-.744 2.840-.282 1.084-1.064 2.456-1.549 3.235C9.584 23.815 10.77 24.001 12.017 24.001c6.624 0 11.99-5.367 11.99-12.014C24.007 5.367 18.641.001 12.017.001z"/>
											</svg>
										</a>
									</div>
								</div>
							</div>
						</div>

						<!-- Office Hours -->
						<div class="mt-12 p-6 bg-gradient-to-br from-amber-50 to-orange-50 rounded-xl">
							<h3 class="text-lg font-semibold text-gray-900 mb-4">Office Hours & Availability</h3>
							<div class="space-y-2 text-sm text-gray-600">
								<div class="flex justify-between">
									<span>Monday - Friday:</span>
									<span>9:00 AM - 5:00 PM CT</span>
								</div>
								<div class="flex justify-between">
									<span>Response Time:</span>
									<span>Within 24-48 hours</span>
								</div>
								<p class="text-xs text-gray-500 mt-3">
									For urgent matters, please call during office hours. We aim to respond to all inquiries promptly and look forward to connecting with you.
								</p>
							</div>
						</div>
					</div>
				</div>
			</div>
		</section>

		<!-- FAQ Section -->
		<section class="py-20 bg-gradient-to-br from-gray-50 to-amber-50">
			<div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
				<div class="text-center mb-12">
					<h2 class="text-3xl font-bold text-gray-900 mb-6">Frequently Asked Questions</h2>
					<p class="text-lg text-gray-600">
						Common questions about our work, collaboration opportunities, and research focus.
					</p>
				</div>

				<div class="space-y-6">
					<div class="bg-white rounded-lg shadow-md p-6">
						<h3 class="text-lg font-semibold text-gray-900 mb-3">How can I collaborate with your research team?</h3>
						<p class="text-gray-600">
							We welcome collaborations with researchers, industry partners, and academic institutions. Reach out through our contact form with details about your research interests and how you'd like to collaborate.
						</p>
					</div>

					<div class="bg-white rounded-lg shadow-md p-6">
						<h3 class="text-lg font-semibold text-gray-900 mb-3">Do you offer student research opportunities?</h3>
						<p class="text-gray-600">
							Yes! We offer research positions for undergraduate and graduate students at Vanderbilt, as well as visiting research opportunities. Check our careers page or contact us directly for current openings.
						</p>
					</div>

					<div class="bg-white rounded-lg shadow-md p-6">
						<h3 class="text-lg font-semibold text-gray-900 mb-3">What makes your approach to AI different?</h3>
						<p class="text-gray-600">
							We focus on augmented intelligence - AI that amplifies human capabilities rather than replacing humans. Our research emphasizes human-AI collaboration, ethical considerations, and maintaining human agency in AI systems.
						</p>
					</div>

					<div class="bg-white rounded-lg shadow-md p-6">
						<h3 class="text-lg font-semibold text-gray-900 mb-3">Can industry partners access your research tools?</h3>
						<p class="text-gray-600">
							We work with industry partners to translate our research into practical applications. Contact us to discuss licensing opportunities, collaborative projects, and access to our research tools.
						</p>
					</div>
				</div>
			</div>
		</section>
	</main>

	<Footer />
</Layout>

<script>
	// Form submission handling
	document.addEventListener('DOMContentLoaded', function() {
		const form = document.getElementById('contact-form');
		
		form?.addEventListener('submit', function(e) {
			e.preventDefault();
			
			// Get form data
			const formData = new FormData(form);
			const data = Object.fromEntries(formData);
			
			// Simple validation
			const required = ['firstName', 'lastName', 'email', 'inquiryType', 'subject', 'message'];
			const missing = required.filter(field => !data[field]);
			
			if (missing.length > 0) {
				alert(`Please fill in the following required fields: ${missing.join(', ')}`);
				return;
			}
			
			// Show success message (in real implementation, would send to server)
			alert('Thank you for your message! We will get back to you within 24-48 hours.');
			form.reset();
		});
	});
</script>