---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Hero from '../components/Hero.astro';
import Footer from '../components/Footer.astro';
---

<Layout title="Training & Education | Amplified Generative AI Innovation Center">
	<Header />
	
	<main class="pt-16 lg:pt-20">
		<Hero 
			title="Transform Your Career with AI"
			subtitle="World-Class Training & Education"
			description="Join 700,000+ professionals worldwide who have advanced their careers through our groundbreaking generative AI and prompt engineering courses. Learn from the researchers who are defining the future of human-AI collaboration."
			ctaText="Explore Courses"
			ctaLink="#courses"
			secondaryCtaText="Corporate Training"
			secondaryCtaLink="#corporate"
		/>

		<!-- Impact Stats -->
		<section class="py-20 bg-white">
			<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
				<div class="text-center mb-16">
					<h2 class="text-3xl sm:text-4xl font-bold text-gray-900 mb-6">
						Global Training Impact
					</h2>
					<p class="text-xl text-gray-600 max-w-3xl mx-auto">
						Our training programs are transforming careers and organizations across 100+ countries
					</p>
				</div>

				<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8 text-center">
					<div class="bg-gradient-to-br from-blue-50 to-cyan-50 p-8 rounded-xl">
						<div class="w-16 h-16 bg-gradient-to-br from-blue-500 to-cyan-500 rounded-full flex items-center justify-center mx-auto mb-4">
							<svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
								<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"/>
							</svg>
						</div>
						<div class="text-4xl font-bold text-blue-600 mb-2">700K+</div>
						<div class="text-gray-700 font-medium">Professionals Trained</div>
						<div class="text-sm text-gray-500 mt-2">Across 100+ countries</div>
					</div>

					<div class="bg-gradient-to-br from-green-50 to-emerald-50 p-8 rounded-xl">
						<div class="w-16 h-16 bg-gradient-to-br from-green-500 to-emerald-500 rounded-full flex items-center justify-center mx-auto mb-4">
							<svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
								<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-4m-5 0H9m0 0H7m2 0v-6a2 2 0 012-2h2a2 2 0 012 2v6m-6 0a2 2 0 001-1.73l3-5.2a2 2 0 011.73-1h0a2 2 0 011.73 1l3 5.2a2 2 0 001 1.73H19"/>
							</svg>
						</div>
						<div class="text-4xl font-bold text-green-600 mb-2">1,000+</div>
						<div class="text-gray-700 font-medium">Companies</div>
						<div class="text-sm text-gray-500 mt-2">Using our courses</div>
					</div>

					<div class="bg-gradient-to-br from-purple-50 to-pink-50 p-8 rounded-xl">
						<div class="w-16 h-16 bg-gradient-to-br from-purple-500 to-pink-500 rounded-full flex items-center justify-center mx-auto mb-4">
							<svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
								<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4M7.835 4.697a3.42 3.42 0 001.946-.806 3.42 3.42 0 014.438 0 3.42 3.42 0 001.946.806 3.42 3.42 0 013.138 3.138 3.42 3.42 0 00.806 1.946 3.42 3.42 0 010 4.438 3.42 3.42 0 00-.806 1.946 3.42 3.42 0 01-3.138 3.138 3.42 3.42 0 00-1.946.806 3.42 3.42 0 01-4.438 0 3.42 3.42 0 00-1.946-.806 3.42 3.42 0 01-3.138-3.138 3.42 3.42 0 00-.806-1.946 3.42 3.42 0 010-4.438 3.42 3.42 0 00.806-1.946 3.42 3.42 0 013.138-3.138z"/>
							</svg>
						</div>
						<div class="text-4xl font-bold text-purple-600 mb-2">Federal</div>
						<div class="text-gray-700 font-medium">Certification</div>
						<div class="text-sm text-gray-500 mt-2">Official U.S. credentials</div>
					</div>

					<div class="bg-gradient-to-br from-amber-50 to-orange-50 p-8 rounded-xl">
						<div class="w-16 h-16 bg-gradient-to-br from-amber-500 to-orange-500 rounded-full flex items-center justify-center mx-auto mb-4">
							<svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
								<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3.055 11H5a2 2 0 012 2v1a2 2 0 002 2 2 2 0 012 2v2.945M8 3.935V5.5A2.5 2.5 0 0010.5 8h.5a2 2 0 012 2 2 2 0 104 0 2 2 0 012-2h1.064M15 20.488V18a2 2 0 012-2h3.064M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
							</svg>
						</div>
						<div class="text-4xl font-bold text-amber-600 mb-2">18</div>
						<div class="text-gray-700 font-medium">Months</div>
						<div class="text-sm text-gray-500 mt-2">To 700K+ learners</div>
					</div>
				</div>
			</div>
		</section>

		<!-- Featured Courses -->
		<section id="courses" class="py-20 bg-gradient-to-br from-gray-50 to-amber-50">
			<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
				<div class="text-center mb-16">
					<h2 class="text-3xl sm:text-4xl font-bold text-gray-900 mb-6">
						World-Class AI Courses
					</h2>
					<p class="text-xl text-gray-600 max-w-3xl mx-auto">
						Learn from the researchers who are defining the field. Our courses combine cutting-edge research with practical application.
					</p>
				</div>

				<div class="grid grid-cols-1 lg:grid-cols-2 gap-12 mb-16">
					<!-- Prompt Engineering Course -->
					<div class="bg-white rounded-2xl shadow-xl p-8">
						<div class="flex items-center mb-6">
							<div class="w-16 h-16 bg-gradient-to-br from-blue-500 to-purple-500 rounded-xl flex items-center justify-center mr-6">
								<svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
									<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"/>
								</svg>
							</div>
							<div>
								<h3 class="text-2xl font-bold text-gray-900">Prompt Engineering for ChatGPT</h3>
								<p class="text-blue-600 font-medium">Most Popular Course</p>
							</div>
						</div>
						<p class="text-gray-600 mb-6 leading-relaxed">
							Master the art and science of prompt engineering with the foundational course that launched 700,000+ careers. Learn from the creators of the Prompt Pattern Catalog (1,500+ citations).
						</p>
						<div class="space-y-3 mb-8">
							<div class="flex items-center space-x-3">
								<svg class="w-5 h-5 text-green-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
									<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
								</svg>
								<span class="text-gray-700">Complete prompt pattern framework</span>
							</div>
							<div class="flex items-center space-x-3">
								<svg class="w-5 h-5 text-green-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
									<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
								</svg>
								<span class="text-gray-700">Real-world case studies</span>
							</div>
							<div class="flex items-center space-x-3">
								<svg class="w-5 h-5 text-green-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
									<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
								</svg>
								<span class="text-gray-700">Industry-recognized certification</span>
							</div>
							<div class="flex items-center space-x-3">
								<svg class="w-5 h-5 text-green-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
									<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
								</svg>
								<span class="text-gray-700">Used by Fortune 500 companies</span>
							</div>
						</div>
						<div class="flex items-center justify-between">
							<div>
								<div class="text-2xl font-bold text-gray-900">500K+</div>
								<div class="text-sm text-gray-600">Learners enrolled</div>
							</div>
							<a href="https://www.coursera.org/learn/prompt-engineering" target="_blank" class="px-6 py-3 bg-blue-600 text-white font-semibold rounded-lg hover:bg-blue-700 transition-colors">
								Enroll Now
							</a>
						</div>
					</div>

					<!-- Generative AI Course -->
					<div class="bg-white rounded-2xl shadow-xl p-8">
						<div class="flex items-center mb-6">
							<div class="w-16 h-16 bg-gradient-to-br from-green-500 to-emerald-500 rounded-xl flex items-center justify-center mr-6">
								<svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
									<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z"/>
								</svg>
							</div>
							<div>
								<h3 class="text-2xl font-bold text-gray-900">Introduction to Generative AI</h3>
								<p class="text-green-600 font-medium">Comprehensive Foundation</p>
							</div>
						</div>
						<p class="text-gray-600 mb-6 leading-relaxed">
							Build a comprehensive understanding of generative AI technologies, applications, and implications. Perfect for professionals entering the AI space.
						</p>
						<div class="space-y-3 mb-8">
							<div class="flex items-center space-x-3">
								<svg class="w-5 h-5 text-green-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
									<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
								</svg>
								<span class="text-gray-700">Foundational AI concepts</span>
							</div>
							<div class="flex items-center space-x-3">
								<svg class="w-5 h-5 text-green-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
									<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
								</svg>
								<span class="text-gray-700">Ethical AI considerations</span>
							</div>
							<div class="flex items-center space-x-3">
								<svg class="w-5 h-5 text-green-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
									<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
								</svg>
								<span class="text-gray-700">Hands-on applications</span>
							</div>
							<div class="flex items-center space-x-3">
								<svg class="w-5 h-5 text-green-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
									<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
								</svg>
								<span class="text-gray-700">Industry best practices</span>
							</div>
						</div>
						<div class="flex items-center justify-between">
							<div>
								<div class="text-2xl font-bold text-gray-900">200K+</div>
								<div class="text-sm text-gray-600">Learners enrolled</div>
							</div>
							<a href="https://www.coursera.org/learn/introduction-to-generative-ai" target="_blank" class="px-6 py-3 bg-green-600 text-white font-semibold rounded-lg hover:bg-green-700 transition-colors">
								Enroll Now
							</a>
						</div>
					</div>
				</div>

				<!-- Success Stories -->
				<div class="bg-white rounded-2xl shadow-xl p-8">
					<h3 class="text-2xl font-bold text-gray-900 mb-8 text-center">Learner Success Story</h3>
					<div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center">
						<div>
							<div class="bg-gradient-to-r from-blue-50 to-purple-50 p-8 rounded-xl border-l-4 border-blue-500">
								<div class="flex items-center mb-6">
									<div class="w-12 h-12 bg-blue-500 rounded-full flex items-center justify-center mr-4">
										<span class="text-white font-bold text-sm">SK</span>
									</div>
									<div>
